{
  "name": "backend-node-vix-test",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "npx jest --coverage --testTimeout 30000",
    "test:dev": "npx jest --watch --testTimeout 30000 --detectOpenHandles",
    "clean": "if [ -d dist ]; then rm -rf dist; fi",
    "build": "npm run clean && npx prisma generate && npx tsc && mkdir -p dist/swagger/schemas && cp src/swagger/schemas/json-schema.json dist/swagger/schemas/json-schema.json && cp src/swagger/swagger.yaml dist/swagger/swagger.yaml",
    "start": "node --env-file .env dist/index.js --trace-warnings",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build:start": "npm run build && yarn start",
    "build:prod": "npx tsc && mkdir -p dist/swagger/schemas && cp src/swagger/schemas/json-schema.json dist/swagger/schemas/json-schema.json && cp src/swagger/swagger.yaml dist/swagger/swagger.yaml",
    "dc:up": "docker compose up -d --build && docker compose logs -f api",
    "dc:down": "docker compose down --remove-orphans",
    "db:up": "docker compose -f docker-compose-db.yml up -d",
    "db:down": "docker compose -f docker-compose-db.yml down --remove-orphans"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "glob": "^9",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.1",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "prisma": "^5.21.1",
    "prisma-json-schema-generator": "^5.1.5",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^11.0.2",
    "yamljs": "^0.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.4",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.0",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prettier": "^3.3.3",
    "prisma-dbml-generator": "^0.12.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
